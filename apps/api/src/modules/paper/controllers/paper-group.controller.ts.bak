import {
  Controller,
  Get,
  Post,
  Put,
  Delete,
  Body,
  Param,
  Query,
} from '@nestjs/common';
import { ApiTags, ApiOperation, ApiQuery } from '@nestjs/swagger';
import { PaperGroupService } from '../services/paper-group.service';
import { CreatePaperGroupDto, UpdatePaperGroupDto } from '../dto';

@ApiTags('용지그룹')
@Controller('paper-groups')
export class PaperGroupController {
  constructor(private readonly service: PaperGroupService) {}

  @Get()
  @ApiOperation({ summary: '용지 그룹 목록 조회' })
  @ApiQuery({ name: 'isActive', required: false, type: Boolean })
  async findAll(@Query('isActive') isActive?: string) {
    const active = isActive === 'true' ? true : isActive === 'false' ? false : undefined;
    return this.service.findAll(active);
  }

  @Get(':id')
  @ApiOperation({ summary: '용지 그룹 상세 조회' })
  async findOne(@Param('id') id: string) {
    return this.service.findOne(id);
  }

  @Post()
  @ApiOperation({ summary: '용지 그룹 생성' })
  async create(@Body() dto: CreatePaperGroupDto) {
    return this.service.create(dto);
  }

  @Put(':id')
  @ApiOperation({ summary: '용지 그룹 수정' })
  async update(@Param('id') id: string, @Body() dto: UpdatePaperGroupDto) {
    return this.service.update(id, dto);
  }

  @Delete(':id')
  @ApiOperation({ summary: '용지 그룹 삭제' })
  async remove(@Param('id') id: string) {
    return this.service.remove(id);
  }
}
