{
  "name": "printing114",
  "version": "1.0.0",
  "private": true,
  "description": "인쇄업 ERP 시스템 - 포토북/앨범 인쇄 통합 관리",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "predev": "npm run clean:ports",
    "dev": "concurrently -n \"API,WEB\" -c \"blue,green\" --restart-tries -1 --restart-after 3000 \"npm run dev:api\" \"npm run dev:web\"",
    "dev:api": "cross-env NODE_OPTIONS=--max-old-space-size=2048 npm -w apps/api run start:dev",
    "dev:web": "cross-env NODE_OPTIONS=--max-old-space-size=2048 npm -w apps/web run dev",
    "dev:clean": "npm run clean:all && npm run dev",
    "clean:ports": "kill-port --port 3001,3002 || echo Ports cleared",
    "clean:cache": "npm -w apps/web run clean",
    "clean:api": "npm -w apps/api run clean",
    "clean:web": "npm -w apps/web run clean",
    "clean:all": "npm run clean:api && npm run clean:web",
    "clean:full": "npm run clean:all && rimraf node_modules apps/*/node_modules",
    "stop": "npm run clean:ports",
    "build": "npm run build:api && npm run build:web",
    "build:api": "npm -w apps/api run build",
    "build:web": "npm -w apps/web run build",
    "build:clean": "npm run clean:all && npm run build",
    "db:generate": "npm -w apps/api run db:generate",
    "db:push": "npm -w apps/api run db:push",
    "db:migrate": "npm -w apps/api run db:migrate",
    "db:studio": "npm -w apps/api run db:studio",
    "db:dump": "npm -w apps/api run db:dump",
    "db:restore": "npm -w apps/api run db:restore",
    "lint": "npm run lint --workspaces",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\""
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "kill-port": "^2.0.1",
    "prettier": "^3.2.0",
    "rimraf": "^6.1.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@types/nodemailer": "^7.0.9",
    "nodemailer": "^8.0.1"
  }
}
